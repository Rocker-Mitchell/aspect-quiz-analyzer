{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "no-empty-source": [
      true,
      {
        "severity": "warning"
      }
    ],
    "import-notation": "string",
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "layer", "apply"]
      }
    ]
  }
}
