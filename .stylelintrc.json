{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "no-empty-source": [
      true,
      {
        "severity": "warning"
      }
    ],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "layer", "apply"]
      }
    ],
    "function-no-unknown": null,
    "scss/function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ]
  }
}
